
prolog
valid(a).
valid(b).
valid(c).
endprolog

headgoal_$X { valid(X) }:
	echo $X is valid. >$@

headgoal_$X { \+ valid(X) }:
	echo $X is invalid. >$@

depgoal_$X: { valid(X) }
	echo $X is valid. >$@

depgoal_$X: { \+ valid(X) }
	echo $X is invalid. >$@

multiline_depgoal_$X_$Y: { valid(X),
		           valid(Y) }
	echo $X and $Y are valid >$@

multiline_depgoal_$X_$Y: { \+ (valid(X),
		               valid(Y)) }
	echo Either $X or $Y, or both, are invalid >$@
